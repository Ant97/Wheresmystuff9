<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jaggia.wheresmystuff9.controllers.LostItemPost"
    tools:showIn="@layout/activity_lost_item_post">

    <RelativeLayout
        android:id="@+id/lost_post_form"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/create_lost_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="Create New Lost Post"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />


        <EditText
            android:id="@+id/itemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="Item Name*"
            android:inputType="textVisiblePassword|textNoSuggestions"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/button2"
            android:textColorHint="@color/button1" />

        <EditText
            android:id="@+id/itemDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:hint="Item Description"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:textColor="@color/button2"
            android:textColorHint="@color/button1" />

        <EditText
            android:id="@+id/reward"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:hint="Reward (Optional)"
            android:inputType="textVisiblePassword|textNoSuggestions"
            android:maxLines="2"
            android:textColor="@color/button2"
            android:textColorHint="@color/button1" />

        <LinearLayout
            android:id="@+id/locationlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/categorylayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/categoryText"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="55dp"
                android:text="@string/category"
                android:textColor="@color/button1"
                android:textSize="17sp" />

            <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="50dp">

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dateLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/monthText"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="55dp"
                android:text="@string/month"
                android:textColor="@color/button1"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/monthSpinner"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"></Spinner>

            <TextView
                android:id="@+id/dayText"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:text="@string/day"
                android:textColor="@color/button1"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/daySpinner"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"></Spinner>

            <TextView
                android:id="@+id/yearText"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:text="@string/year"
                android:textColor="@color/button1"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/yearSpinner"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/createButton"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:background="@color/button1"
                android:text="Create"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"></Button>

            <Button
                android:id="@+id/cancelLost"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:background="@color/button2"
                android:text="Cancel"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/mapButton"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:background="@color/button2"
                android:text="Map"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"></Button>

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
