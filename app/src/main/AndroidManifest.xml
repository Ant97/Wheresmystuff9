<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jaggia.wheresmystuff9">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">
        <activity android:name=".controllers.WelcomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controllers.LoginScreen">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controllers.RegisterScreen">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controllers.mainApp" />
        <activity
            android:name=".controllers.MainUserScreen"
            android:label="@string/title_activity_main_user_screen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".controllers.MakeAPost"
            android:label="@string/title_activity_make_apost"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".controllers.LostItemPost"
            android:label="@string/title_activity_lost_item_post"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".controllers.ViewPosts"
            android:label="@string/title_activity_view_posts"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>
    </application>

</manifest>